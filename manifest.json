{
  "name": "EcoScroll",
  "version": "1.0.0",
  "description": "Eco-friendly Social Media use moderator",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "notifications",
    "pageCapture",
    "scripts",
    "tabs"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "scripts/background.js"
  }
}
