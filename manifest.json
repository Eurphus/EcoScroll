{
  "name": "EcoScroll",
  "version": "1.0.0",
  "description": "Eco-friendly Social Media use moderator",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "notifications",
    "pageCapture",
    "scripts",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.tiktok.com/*",
    "https://www.instagram.com/*"
  ],
  "action": {
    "default_popup": "pages/index.html"
  },
  "background": {
    "service_worker": "scripts/background.js"
  }
}
